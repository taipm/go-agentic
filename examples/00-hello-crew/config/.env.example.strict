# Example: Strict Mode Configuration
# This file demonstrates enabling Strict Mode for configuration validation
# Copy to .env and adjust values for your deployment

# Configuration Mode
# - permissive (default): Silent defaults, no errors for missing config
# - strict: Explicit validation, fails if values missing/invalid
CONFIG_MODE=strict

# === TIMEOUT PARAMETERS (all required in Strict Mode) ===
PARALLEL_TIMEOUT_SECONDS=120
TOOL_EXECUTION_TIMEOUT_SECONDS=10
TOOL_RESULT_TIMEOUT_SECONDS=30
MIN_TOOL_TIMEOUT_MS=100
STREAM_CHUNK_TIMEOUT_MS=500
SSE_KEEP_ALIVE_SECONDS=30
REQUEST_STORE_CLEANUP_MINUTES=5
GRACEFUL_SHUTDOWN_CHECK_INTERVAL_MS=100
RETRY_BACKOFF_MIN_MS=100
RETRY_BACKOFF_MAX_MS=5000

# === SIZE LIMITS (all required in Strict Mode) ===
MAX_INPUT_SIZE_KB=10
MIN_AGENT_ID_LENGTH=1
MAX_AGENT_ID_LENGTH=128
MAX_REQUEST_BODY_SIZE_KB=100
MAX_TOOL_OUTPUT_CHARS=2000
STREAM_BUFFER_SIZE=100
MAX_STORED_REQUESTS=1000

# === CACHE AND THRESHOLDS ===
CLIENT_CACHE_TTL_MINUTES=60
TIMEOUT_WARNING_THRESHOLD_PCT=20

# === LLM CONFIGURATION ===
OPENAI_API_KEY=sk-your-api-key-here
OLLAMA_URL=http://localhost:11434
